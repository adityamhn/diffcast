# GitHub
GITHUB_TOKEN=ghp_xxx          # For API calls (fetching diffs). Create at: https://github.com/settings/tokens
# Webhook secret: use ONE of these:
# - GITHUB_WEBHOOK_SECRET=xxx     # Shared secret for all repos (set same in each repo's webhook)
# - Or register each repo via POST /api/repos/register to get per-repo secrets

# Firebase
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/serviceAccountKey.json
# Or use: GOOGLE_APPLICATION_CREDENTIALS=path/to/serviceAccountKey.json
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# LLM + Pipeline
GEMINI_API_KEY=your-gemini-key
PIPELINE_LANGUAGES=en,es,fr
PIPELINE_MAX_WORKERS=2
# Optional JSON map to control voice names per language code
# PIPELINE_VOICE_MAP={"en":"en-US-Neural2-C","es":"es-ES-Neural2-B"}

# Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key
LOG_LEVEL=INFO
